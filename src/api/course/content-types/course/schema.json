{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "tittle": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "tittle",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "schedule": {
      "type": "date",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "registrationLink": {
      "type": "string",
      "required": true,
      "regex": "^https:\\/\\/docs\\.google\\.com\\/forms\\/.*"
    }
  }
}
