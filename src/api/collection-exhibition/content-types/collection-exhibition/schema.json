{
  "kind": "collectionType",
  "collectionName": "collection_exhibitions",
  "info": {
    "singularName": "collection-exhibition",
    "pluralName": "collection-exhibitions",
    "displayName": "collectionExhibition"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "startDate": {
      "type": "date",
      "required": true
    },
    "endDate": {
      "type": "date",
      "required": true
    },
    "statusEvent": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "current",
        "upcoming",
        "archived"
      ]
    },
    "description": {
      "type": "richtext"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "artwork_exhibitions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::artwork-exhibition.artwork-exhibition",
      "mappedBy": "collection_exhibition"
    }
  }
}
