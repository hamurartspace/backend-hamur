{
  "collectionName": "exhibitions",
  "info": {
    "singularName": "exhibition",
    "pluralName": "exhibitions",
    "displayName": "Exhibition"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "startDate": {
      "type": "date",
      "required": true
    },
    "endDate": {
      "type": "date",
      "required": true
    },
    "statusEvent": {
      "type": "enumeration",
      "enum": ["current", "upcoming"],
      "default": "upcoming",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    }
  }
}
